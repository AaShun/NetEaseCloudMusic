.topLeft {
  position: fixed;
  top: 60rpx;
  left: 40rpx;
  right: 0;
}

.list-artist-name {
  padding: 0 50rpx;
  margin-top: 400rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: white;
}

.list-art-name {
  font-size: 40rpx;
  font-weight: bold;
}

.list-artist-plus {
  background: #c20c0c;
  border-radius: 20rpx;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
}



/* 歌曲 */

.sheet-icons {
  width: 50rpx;
  height: 50rpx;
}

.artistUrl {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  width: 100%;
  height: 560rpx;
  z-index: -1;
}

.musicPlay {
  font-size: 30rpx;
  display: flex;
  align-content: center;
  padding: 8rpx 40rpx;
}

.playImg {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.hotSongs {
  color: #ccc;
  padding: 20rpx 30rpx;
  background: #fafafa;
}

.hotBox {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  align-items: center;
}

.indexName {
  display: flex;
  justify-content: left;
  align-items: center;
  font-size: 24rpx;
}

.indexNum {
  font-size: 30rpx;
  width: 60rpx;
}

.songName {
  color: #333;
  font-size: 32rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 3;
  width: 400rpx;
}

.singgerName {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 3;
  width: 400rpx;
}

/* 专辑 */

.keysList{
  display: flex;
  justify-content: left;
  align-items: center;
  margin: 20rpx
}

.picUrl{
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx
}

.artists{
  margin-left: 30rpx;
  font-size: 32rpx;
  line-height: 50rpx
}

.publishTime{
  font-size: 24rpx;
  color: #666;
}


/* 视频 */
.videoList-all {
  padding: 10rpx 20rpx;
  display: flex;
  justify-content: left;
  align-items: center;
}

.videoList-coverUrl {
  width: 300rpx;
  height: 220rpx;
  border-radius: 20rpx
}

.vision-img{
  position: relative;
  color: white;
  font-size: 24rpx
}

.vision-playtime{
  position: absolute;
  top: 6rpx;
  right: 10rpx;
  display: flex;
  justify-content: right;
  align-items: center
}

.mlogList--play{
  width: 24rpx;
  height: 24rpx
}

.videoList-word {
  padding-left: 30rpx;
  font-size: 32rpx;
  line-height: 50rpx;
}

.videoList-creator {
  padding-top: 10rpx;
  font-size: 26rpx;
  color: #999;
}


